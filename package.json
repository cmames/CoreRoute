{
  "name": "coreroute",
  "version": "1.0.8",
  "description": "A simplified HTTP Router class for Node.js applications",
  "main": "dist/coreroute.js",
  "types": "dist/coreroute.d.ts",
  "type": "module",
  "scripts": {
    ".xscripts": "chmod +x .github/scripts/patch.sh && chmod +x .github/scripts/minor.sh && chmod +x .github/scripts/major.sh",
    "doc": "typedoc --plugin typedoc-plugin-markdown src/coreroute.ts",
    "build": "npx tsc",
    "patch": "npm run build && npm run .xscripts && .github/scripts/patch.sh",
    "minor": "npm run build && npm run .xscripts && .github/scripts/minor.sh",
    "major": "npm run build && npm run .xscripts && .github/scripts/major.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmames/CoreRoute.git"
  },
  "keywords": [
    "route",
    "router",
    "routing",
    "web",
    "server",
    "api"
  ],
  "author": "Mames Christophe",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/cmames/CoreRoute/issues"
  },
  "homepage": "https://github.com/cmames/CoreRoute#readme",
  "devDependencies": {
    "@types/node": "^22.13.5",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.7.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
